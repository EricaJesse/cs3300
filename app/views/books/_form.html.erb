<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :author %>
        <%= form.text_field :author, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :plot %>
    <%= form.text_area :plot, class: 'form-control' %>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <div class="form-group">
      <%= form.label :rating, class: 'form-label' %>
      <%= form.number_field :rating, min: 1, max: 10, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :date_completed %>
        <%= form.date_field :date_completed, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>

  <div class="form-group">
    <%= form.label :characters, 'Characters' %>
    <%= form.fields_for :characters do |character| %>
      <%= render 'character_fields', f: character %>
  <% end %>
  <div class="link" id="add_character">
    <%= link_to 'Add character', '#', class: 'btn btn-info' %>
  </div>
</div>

<% end %>
