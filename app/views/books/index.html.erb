<div class="container">
  
<% if notice.present? %>
  <p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>


  <h1>Books</h1>

  <table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Plot</th>
      <th>Rating</th>
      <th>Date Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= truncate(book.plot, length: 100) %></td>
        <td><%= book.rating %></td>
        <td><%= book.date_completed %></td>
        <td><%= link_to 'Show', book, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: 'btn btn-primary' %>


</div>