<!DOCTYPE html>
<html>
  <head>
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name %>">
      <%= msg %>
    </div>
  <% end %>
  
  <% flash.each do |key, value| %>
    <div class="alert <%= key %>">
      <%= value %>
    </div>
  <% end %>
  

    <title>Book Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Add this code inside your <header> or <nav> element -->
<div class="d-flex align-items-center">
  <% if user_signed_in? %>
  <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-primary me-2'%>
  <% else %>
    <%= link_to 'Log in', new_user_session_path, class: 'btn btn-primary me-2' %>
    <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-secondary' %>
  <% end %>
</div>

  </head>

  <body>
    <div class="container mt-5">
      <%= yield %>
    </div>

    <% if user_signed_in? %>
    
  <% else %>
    
  <% end %>
  

  </body>
</html>

